{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  // For real world use case, connection string should be added to secret.json and vault should be used
  "ConnectionStrings": {
    "LibraryAppConnectionString": "Server=localhost;Database=LibraryManagementDB;User Id=sa;Password=libapp1234;"
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200"
  },
  "CacheSetting": {
    "ConnectionString": "localhost:6379",
    "AbsoluteExpirationInHours": 2,
    "SlidingExpirationInMinutes": 60
  },
  "RateLimiting": {
    "Limit": 50,
    "Period": "10m"
  },
  "AllowedHosts": "*"
}
